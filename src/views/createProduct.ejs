            <main class="container">
                <section class="formContainer">
                    <h1>Nuevo producto</h1>
                    <form id="newProduct" action="/products" method="POST">
                        <div class="item">
                            <label for="product-name">Nombre del producto</label>
                            <input type="text" name="name" id="name" value="" required>
                        </div>
                        <div class="item">
                            <label for="product-description">Descripción del producto</label>
                            <textarea name="description" value="" id="description" cols="30" rows="10"> </textarea>
                        </div>
                        <div class="item">
                            <label for="product-image">Imagen del producto (JPG/PNG):</label>
                            <input type="file" name="image" value="" id="image" accept="image/png, image/jpeg" multiple>
                        </div>
                        <div class="item">
                            <label for="product-category">Categoría del producto</label>
                            <input type="text" name="category" value="" id="category">
                        </div>


