                        <div class="item">
                            <label for="product-price">Precio del producto ($)</label>
                            <input type="number" name="price" value="" id="price">
                        </div>
                        <div class="item"></div>
                        <button type="submit">Crear producto</button>
                        </div>
                    </form>

                </section>
            </main>
