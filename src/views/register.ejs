<!-- Acá sumamos las vistas automatizadas head -->
<%- include ('./partials/head')  %> 

<body>
        <!-- Acá sumamos la vista automatizada header -->
		<%- include ('./partials/header')  %> 
    <main>
        <div class="container">
            <div class="inicio-sesion">
                <div class="titulo">
                    <h1>Creá tu Cuenta</h1>
                </div>
                <div class="subtitulo">
                    <p>Complete los campos para poder creár su cuenta</p>
                </div>
                <section class="formulario">
                    <form action="/user/register" method="POST" enctype="multipart/form-data">
                        <div class="barras">
                            <div class="mail">
                                <label for="Email"></label>
                                <input type="email" name="email" id="Email" value="" placeholder="Email">
                            </div>
                            <div class="usuario-regis">
                                <label for="usuario"></label>
                                <input type="text" name="usuario" id="usuario" placeholder="Nombre de usuario">
                            </div>
                            <div class="contrasenias">
                                <div class="contra">
                                    <label for="password"></label>
                                    <input type="password" name="password" id="password" value="" placeholder="Contraseña">
                                </div>
                                <div class="imagen">
                                    <label for="avatar"></label>
                                    <input type="file" name="avatar" id="avatar">
                                </div>
                                <!-- <div class="confirmar-contra">
                                    <label for="contrasenia"></label>
                                    <input type="password" name="confirmar-contra" id="confirmar-contra"
                                        placeholder="Confirmar Contraseña">
                                </div> -->
                            </div>
                        </div>
                        <div class="boton">
                            <div class="boton-registrar">
                                <button type="submit">REGISTRAR</button>
                            </div>
                        </div>
                    </form>
                </section>
            </div>
        </div>
    </main>
      <!-- Acá sumamos la vista automatizada footer -->
      <%- include ('./partials/footer')  %> 
</body>

</html>