<!-- Acá sumamos las vistas automatizadas head -->
<%- include ('./partials/head') %>

    <body>
        <!-- Acá sumamos la vista automatizada header -->
        <%- include ('./partials/header') %>
            <main>
                <div class="container">
                    <div class="inicio-sesion">
                        <div class="titulo">
                            <h1>Creá tu Cuenta</h1>
                        </div>
                        <div class="subtitulo">
                            <p>Complete los campos para poder creár su cuenta</p>
                        </div>
                        <section class="formulario">
                            <form id="registerUserForm" action="/user/register" method="POST" enctype="multipart/form-data">
                                <div class="barras">
                                    <div class="mail">
                                        <label for="Email"></label>
                                        <input type="text" name="email" id="Email" placeholder="Email"
                                            value="<%= locals.oldData ? oldData.email : null %>"
                                            class="form-control <%= locals.errors && errors.email ? 'is-invalid' : null %> input-modified">
                                        <% if (locals.errors && errors.email) { %>
                                            <div class="text-danger validations-msg">
                                                <%= errors.email.msg %>
                                            </div>
                                            <% } %>
                                    </div>
                                    <div class="usuario-regis">
                                        <label for="usuario"></label>
                                        <input type="text" name="name" id="name" placeholder="Nombre de usuario"
                                            value="<%= locals.oldData ? oldData.name : null %>"
                                            class="form-control <%= locals.errors && errors.name ? 'is-invalid' : null %> input-modified">
                                        <% if (locals.errors && errors.name) { %>
                                            <div class="text-danger validations-msg">
                                                <%= errors.name.msg %>
                                            </div>
                                            <% } %>
                                    </div>
                                    <div>
                                        <label for="avatar"></label>
                                        <input type="file" name="avatar_image" id="avatar"
                                            style="display: flex;padding-top: 1%;">
                                        <% if (locals.errors && errors.avatar_image) { %>
                                            <div class="text-danger validations-msg">
                                                <%= errors.avatar_image.msg %>
                                            </div>
                                            <% } %>
                                    </div>
                                    <div class="contrasenias">
                                        <div class="contra">
                                            <label for="password"></label>
                                            <input type="password" name="password" id="password"
                                                placeholder="Contraseña" value=""
                                                class="form-control <%=  locals.errors && errors.password ? 'is-invalid' : null %> input-modified">
                                            <% if (locals.errors && errors.password) { %>
                                                <div class="text-danger validations-msg">
                                                    <%= errors.password.msg %>
                                                </div>
                                                <% } %>
                                        </div>
                                        <!-- <div class="confirmar-contra">
                                    <label for="contrasenia"></label>
                                    <input type="password" name="confirmar-contra" id="confirmar-contra"
                                        placeholder="Confirmar Contraseña">
                                </div> -->
                                    </div>
                                </div>
                                <div class="boton">
                                    <div class="boton-registrar">
                                        <button type="submit">REGISTRAR</button>
                                    </div>
                                </div>
                            </form>
                        </section>
                    </div>
                </div>
            </main>
            <!-- Acá sumamos la vista automatizada footer -->
            <%- include ('./partials/footer') %>
    </body>

    </html>